<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result_window"
    android:background="@drawable/backgr"
    >

    <TextView
        android:id="@+id/heading_result"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:background="#2979FF"
        android:fontFamily="@font/montserratsemibold"
        android:lineSpacingExtra="8sp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:text="RESULT"
        android:textAlignment="center"
        android:textColor="#052828"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="wrap_content"
        android:fadeScrollbars="true"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading_result">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/note_text"
                android:layout_width="373dp"
                android:layout_height="177dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserratmedium"
                android:padding="10dp"
                android:text="Please note that the list below is just for informational purpose, and is not verified by any Doctor, and it may not be complete."
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading_login" />

            <TextView
                android:id="@+id/result_1"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bluishh"
                android:fontFamily="@font/garamondbold"
                android:padding="10dp"
                android:text="20%      Common Cold"
                android:textColor="#E8FFFF"
                android:visibility="invisible"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading_login" />
            <TextView
                android:id="@+id/result_2"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bluishh"
                android:fontFamily="@font/garamondbold"
                android:padding="10dp"
                android:visibility="invisible"
                android:text="20%      Common Cold"
                android:textColor="#E8FFFF"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading_login" />
            <TextView
                android:id="@+id/result_3"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bluishh"
                android:fontFamily="@font/garamondbold"
                android:padding="10dp"
                android:visibility="invisible"
                android:text="20%      Common Cold"
                android:textColor="#E8FFFF"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading_login" />
            <TextView
                android:id="@+id/result_4"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bluishh"
                android:fontFamily="@font/garamondbold"
                android:padding="10dp"
                android:text="20%      Common Cold"
                android:textColor="#E8FFFF"
                android:textSize="34sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading_login" />
            <TextView
                android:id="@+id/result_5"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bluishh"
                android:fontFamily="@font/garamondbold"
                android:padding="10dp"
                android:text="20%      Common Cold"
                android:textColor="#E8FFFF"
                android:textSize="34sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heading_login" />

            <Button
                android:id="@+id/recheck_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="#40C4FF"
                android:fontFamily="@font/montserratbold"
                android:onClick="recheck"
                android:text="Restart Checkup"
                android:textColor="#94000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>